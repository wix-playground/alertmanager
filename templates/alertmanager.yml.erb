##
## Global settings
##
global:
  resolve_timeout: 5m
  slack_api_url: 'https://hooks.slack.com/services/<%= databag_passwd("com.wixpress.automation.alertmanager","slackApiKey") %>'

##
## Nested routes
##
route:
  receiver: 'ignore'
  routes:
  - match:
      origin: 'event-dispatcher'
    group_by: ['error']
    group_wait: 10s
    group_interval: 10s
    continue: true
    routes:
    - receiver: 'slack-error-viktorpo'
      continue: true
  - match:
      origin: 'ci'
    group_by: ['groupId', 'artifactId', 'version']
    group_wait: 10s
    group_interval: 10s
    continue: true
    routes:
    - match:
        artifactType: 'RC'
        status: 'SUCCESS'
      receiver: 'jira-rc'
      continue: true
  - match:
      origin: 'lifecycle'
    group_by: ['groupId', 'artifactId', 'version']
    group_wait: 10s
    group_interval: 10s
    continue: true
    routes:
    - match:
        artifactType: 'GA'
        status: 'SUCCESS'
      receiver: 'jira-ga'
      continue: true
    - match:
        artifactType: 'ROLLBACK'
        status: 'SUCCESS'
      receiver: 'jira-rollback'
      continue: true
  - match:
      origin: 'ci'
    group_by: ['groupId', 'artifactId', 'version']
    group_wait: 10s
    group_interval: 10s
    continue: true
    routes:
    - match_re:
        authors: '.*Viktor Polishchuk.*'
      receiver: 'slack-build-viktorpo'
      continue: true
    - match_re:
        authors: '.*Efrat Attas.*'
      receiver: 'slack-build-efrat'
      continue: true

##
## Receivers list
##
receivers:
- name: 'ignore'
    ## Blackhole receiver
- name: 'jira-rc'
  webhook_configs:
  - url: 'https://jira-services.appspot.com/api/build/rc'
    send_resolved: false
    message: '{{ template "http.rc.message" . }}'
    http_headers: 'x-wix-automation-instance:<%= databag_passwd("com.wixpress.automation.automation-event-publisher-web","jiraApiKey") %>'
- name: 'jira-ga'
  webhook_configs:
  - url: 'https://jira-services.appspot.com/api/build/ga'
    send_resolved: false
    message: '{{ template "http.ga.message" . }}'
    http_headers: 'x-wix-automation-instance:<%= databag_passwd("com.wixpress.automation.automation-event-publisher-web","jiraApiKey") %>'
- name: 'jira-rollback'
  webhook_configs:
  - url: 'https://jira-services.appspot.com/api/build/rollback'
    send_resolved: false
    message: '{{ template "http.rollback.message" . }}'
    http_headers: 'x-wix-automation-instance:<%= databag_passwd("com.wixpress.automation.automation-event-publisher-web","jiraApiKey") %>'
- name: 'slack-build-viktorpo'
  slack_configs:
  - channel: '@viktorpo'
    title: '{{ template "slack.build.title" . }}'
    title_link: ''
    text: '{{ template "slack.build.text" . }}'
- name: 'slack-error-viktorpo'
  slack_configs:
  - channel: '@viktorpo'
    title: '{{ template "slack.error.title" . }}'
    title_link: ''
    text: '{{ template "slack.error.text" . }}'
- name: 'slack-build-efrat'
  slack_configs:
  - channel: '@efratao'
    title: '{{ template "slack.build.title" . }}'
    title_link: ''
    text: '{{ template "slack.build.text" . }}'

##
## Message templates
##
templates:
- '/templates/*.tmpl'
